#include <stdio.h>

int main() {
    int i;
    int meatballs[5];
    int totalballs = 0;
    
    for(i=0; i<5; i++){
        printf("how many meatballs did u eat on a day\n",i+1);
        scanf("%d",&meatballs[i]);
        
    }
    for(i=0; i<5; i++){
        totalballs += meatballs[i];
    }
    int avg = totalballs / 5;
    printf("\n you ate %d total meatballs, thats an avgerage of %d per day",totalballs , avg);
    
    return 0;
}
